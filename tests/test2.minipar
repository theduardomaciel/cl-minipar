# Execução paralela: cálculo do fatorial e da série de Fibonacci

class Fatorial {
    func calcular(n: number) -> number {
        if (n <= 1) {
            return 1
        } else {
            return n * self.calcular(n - 1)
        }
    }
    func executar() -> void {
        print("Digite um número para o fatorial:")
        var n: number = sys.stdin.readline()
        var resultado: number = self.calcular(n)
        print("Fatorial de " + n + " = " + resultado)
    }
}

class Fibonacci {
    func calcular(n: number) -> number {
        if (n <= 1) {
            return n
        } else {
            return self.calcular(n - 1) + self.calcular(n - 2)
        }
    }
    func executar() -> void {
        print("Digite um número para a série de Fibonacci:")
        var n: number = sys.stdin.readline()
        print("Série de Fibonacci até " + n + ":")
        for (var i: number = 0 in n) {
            print(self.calcular(i))
        }
    }
}

par {
    var fat: Fatorial = new Fatorial()
    var fib: Fibonacci = new Fibonacci()
    fat.executar()
    fib.executar()
}