# Programa de Teste 2: Execução Paralela (Fatorial e Fibonacci)
# Uso de 'par { ... }' com funções recursivas

func fatorial(number n) -> number {
    if (n <= 1) {
        return 1;
    } else {
        return n * fatorial(n - 1);
    }
}

func fibonacci(number n) -> number {
    if (n <= 1) {
        return n;
    } else {
        return fibonacci(n - 1) + fibonacci(n - 2);
    }
}

par {
    println("=== Thread 1: Fatorial ===");
    println("Fatorial de 5 =", fatorial(5));

    println("=== Thread 2: Fibonacci ===");
    println("Fibonacci(10) =", fibonacci(10));
}
