# Exemplo 2: Sistema de Calculadora OOP
# Tema 2 - Compiladores 2025.1

class Calculadora {
    var resultado: number

    number somar(a: number, b: number) {
        resultado = a + b
        return resultado
    }

    number subtrair(a: number, b: number) {
        resultado = a - b
        return resultado
    }

    number multiplicar(a: number, b: number) {
        resultado = a * b
        return resultado
    }

    number dividir(a: number, b: number) {
        if (b != 0) {
            resultado = a / b
            return resultado
        } else {
            print("Erro: Divisão por zero!")
            return 0
        }
    }

    number getResultado() {
        return resultado
    }
}

# Uso da calculadora
var calc: Calculadora = new Calculadora()

var x: number = 10
var y: number = 5

print("Soma: ", calc.somar(x, y))
print("Subtração: ", calc.subtrair(x, y))
print("Multiplicação: ", calc.multiplicar(x, y))
print("Divisão: ", calc.dividir(x, y))

